<p style="color: green"><%= notice %></p>

<div class="container" style="margin-top:15px;">

<!--Want to delete this but needs to be here for contingency, some links still go here-->
<h1>Quotes</h1>

<div id="quotes">
  <% @quotes.each do |quote| %>
    <% auth = Author.find_by(id: quote.author.id) %>
    <% poster = User.find_by(id: quote.user.id) %>

        <div class="mx-auto p-2 w-auto p-3 card" style="margin-top:20px;">
            <div class="card-body">
                <p class="card-text text-center fst-italic fw-semibold">"<%= quote.quote_text %>"</p>
                <p class="card-text text-end fs-6 fw-lighter"> - <%= auth.auth_f_name %> <%= auth.auth_l_name %></p>
                <p class="card-subtitle text-end mb-2 text-body-secondary fs-6">Posted by: <%= poster.f_name %> <%= poster.l_name %></p>
                <p class="card-subtitle text-end mb-2 text-body-secondary fs-6">Posted on: <%= quote.pub_date.strftime('%d-%m-%Y') %> <%= poster.l_name %></p>
                <a href="<%= quote_path(quote) %>" class="btn btn-primary">Show Quote</a>
            </div>
        </div>
  <% end %>
</div>

<%= link_to "New quote", new_quote_path %>


