<h1>Search Index</h1>

<!-- Stolen from the Workshop -->
<h3 style="padding-top: 10px;">Search for Quotes</h3> 
<%= form_tag search_path, method: :get do %> <div class="form-group" style="padding-bottom: 10px;"> 
<%= text_field_tag :quote_query, params[:quote_query], placeholder: 'Search for Quotes', class: "form-control" %> 
</div> <%= submit_tag 'Search Quotes', class: "btn btn-primary" %> 
<% end %>

<% if params[:quote_query].present? %> 
    <% if @quotematch.present? %> 
        <h4 style="padding-top: 15px;">Results:</h4> 
        <% @quotematch.each do |quote| %>
            <p><%= quote.quote_text %> 
            [<a href="/quotes/<%= quote.id %>">Read full quote</a>]
            </p> 
            <br /> 
        <% end %> 
    <% else %>
        <p>No matching quotes found.</p> 
    <% end %> 
<% end %>