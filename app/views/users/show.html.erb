<h1>User Details</h1>
<p style="color: green"><%= notice %></p>

<%= render @user %>

<div style="margin-top:40px;">

  <a href="<%= users_path %>" class="btn btn-outline-secondary" style="margin-right:20px;">Back to Users</a>
  <a href="<%= edit_user_path(@user) %>" class="btn btn-warning mr-5">Edit User</a>
  
  <div style="padding-top: 50px">
  <%= button_to "Delete User", @user, method: :delete, class: "btn btn-danger"%>
  </div>
</div>
